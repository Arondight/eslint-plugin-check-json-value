{
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:json/recommended"
  ],
  "overrides": [
    {
      "files": ["lib/rules/*.js"],
      "extends": ["plugin:eslint-plugin/rules-recommended"]
    }
  ],
  "ignorePatterns": ["!.eslintrc.json", "!.prettierrc.json"]
}
