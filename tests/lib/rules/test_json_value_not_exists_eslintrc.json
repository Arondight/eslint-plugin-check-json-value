{
  "plugins": ["check-json-value"],
  "rules": {
    "check-json-value/json-value": [
      "error",
      [
        {
          "file": "test_json_value\\.json",
          "path": "that.is.a.great.day",
          "values": [
            {
              "type": "string",
              "value": "^yes$",
              "ignoreCase": true
            }
          ]
        }
      ]
    ]
  }
}
